pipeline {
    // agent any

    // Mention the nodes.
    agent { node { label 'workstation' } }

    // Ansi Colour options
    options { ansiColor('xterm')}

    // Access Variables.
    environment {
    TEST_URL = "google.com"
    SSH = credentials("centos-ssh")
    }

    // Access the secret that is stored in Jenkins.
    // environment { SSH = credentials("centos-ssh")}


    stages {
        stage('Compile') {
            steps {
                echo TEST_URL
                echo SSH
            }
        }
    }
}





